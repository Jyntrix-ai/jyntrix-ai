# ===========================================
# Jyntrix AI - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# -------------------------------------------
# Application
# -------------------------------------------
NODE_ENV=development
APP_NAME=jyntrix-ai
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# -------------------------------------------
# Database - PostgreSQL
# -------------------------------------------
DATABASE_URL=postgresql://postgres:password@localhost:5432/jyntrix_ai?schema=public

# -------------------------------------------
# Cache - Redis
# -------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -------------------------------------------
# Vector Database - Pinecone
# -------------------------------------------
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=jyntrix-memory

# -------------------------------------------
# Graph Database - Neo4j
# -------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# -------------------------------------------
# AI Providers
# -------------------------------------------
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Cohere (for embeddings alternative)
COHERE_API_KEY=

# -------------------------------------------
# Authentication
# -------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# NextAuth (if using Next.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# -------------------------------------------
# Memory System Configuration
# -------------------------------------------
# Memory tiers
WORKING_MEMORY_TTL_SECONDS=300
SHORT_TERM_MEMORY_TTL_HOURS=24
LONG_TERM_MEMORY_ENABLED=true

# Vector search
EMBEDDING_DIMENSIONS=1536
SIMILARITY_THRESHOLD=0.75
MAX_SEARCH_RESULTS=10

# Graph relationships
MAX_GRAPH_DEPTH=5
RELATIONSHIP_DECAY_FACTOR=0.1

# -------------------------------------------
# Queue System - BullMQ
# -------------------------------------------
QUEUE_REDIS_URL=redis://localhost:6379

# -------------------------------------------
# Logging & Monitoring
# -------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=json

# Sentry (optional)
SENTRY_DSN=

# -------------------------------------------
# Feature Flags
# -------------------------------------------
FEATURE_MULTI_TENANT=false
FEATURE_ASYNC_PROCESSING=true
FEATURE_GRAPH_MEMORY=true

# -------------------------------------------
# External Services
# -------------------------------------------
# S3/Storage (for file attachments)
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Email (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@jyntrix.ai

# -------------------------------------------
# Development
# -------------------------------------------
DEBUG=false
ENABLE_SWAGGER=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
